            if($this->newimage)
        {
            unlink('images/products/'.$product->image);
            $imageName= Carbon::now()->timestamp.'.'.$this->newimage->extension();
            $this->newimage->storeAs('products', $imageName);
            $product->image = $imageName;
        }


